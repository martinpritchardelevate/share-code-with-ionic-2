{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
	  "outDir": "./dist",
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typeRoots": [
      "../node_modules/@types"
    ],
    "types" : [
      "core-js"
    ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}